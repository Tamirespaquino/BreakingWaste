  <%- include('./partials/header')%>

<br></br>

  <!--Container central-->

  <div class="main-ilustracao container">
    <img class="img-fale-conosco" src="/public/img/SVG/fale conosco.svg" alt="cadastro">
  
    <div data-aos="zoom-in">
      <div class="fale-conosco-form container">
        <h2 class="titulo text-center text-success">Fale conosco</h2>
      </div>
    </div>

    <!-- AOS ANIMATION  -->
    <script type="text/javascript">
      AOS.init({
          duration: 1200,
      });
    </script>

  <br></br> 
  <div class="form-contato container col-md-6">
    <form class="form-group col-md-12">
      <div class="form-group">
        <label for="formGroupExampleInput">Nome</label>
        <input type="text" size= "45" class="form-control" id="Nome" placeholder="Nome">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">E-mail</label>
        <input type="email" size= "45" class="form-control" id="e-mail" placeholder="e-mail">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Assunto</label>
        <input type="text" size= "45" class="form-control" id="Assunto" placeholder="Assunto">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Mensagem</label>
        <textarea name="Mensagem" class="form-control" rows="10" cols="60" wrap="virtual" id="Mensagem" placeholder="Mensagem"></textarea>
      </div>
      <div class="row">
        <div class="container col-md-6">
          <button type="submit" class="enviar-email btn btn-block btn-success">Enviar e-mail</button>
        </div>
        <div class="container col-md-6">
          <button type="reset" class="btn btn-block btn-success">Limpar formul√°rio</button>
        </div>
      </div>
    </form>
    <br></br>
  </div>
  </div>

 <!--Footer-->
 <%-include ('./partials/footer')%>

